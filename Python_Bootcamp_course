import pandas as pd
print(pd.__version__)

#Import csv file with california housing information
california_housing_dataframe = pd.read_csv("https://download.mlcc.google.com/mledu-datasets/california_housing_train.csv", sep=",")

#print(california_housing_dataframe.describe())
#print(california_housing_dataframe.head())

#Create a pandas data frame with City & Population Information
cities = pd.DataFrame()
cities['City name'] = pd.Series(['San Francisco', 'San Jose', 'Sacramento'])
cities['Population'] = pd.Series([852469, 1015785, 485199])

#print(cities['City name'])
#print(cities['Population'])

#Add more series in the cities pandas data frame
cities['Area square miles'] = pd.Series([46.87, 176.53, 97.92])
cities['Is wide and has saint name'] = (cities['Area square miles'] > 50) & cities['City name'].apply(lambda name: name.startswith('San'))

cities['Is san francisco'] = (cities['City name'] == 'San Francisco')
cities_population_dataframe = cities['Population'].describe()

#print(cities_population_dataframe)

print(cities)

print(cities.reindex([2, 0, 1]))
